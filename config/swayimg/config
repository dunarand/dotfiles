[keys.viewer]
h = prev_file
l = next_file
j = next_file
k = prev_file
Home = first_file
End = last_file

Equal = zoom +10
Plus = zoom +10
Minus = zoom -10
0 = zoom real
z = zoom fit
Shift+z = zoom fill

bracketleft = rotate_left
bracketright = rotate_right
m = flip_vertical
Shift+m = flip_horizontal

i = info
f = fullscreen
Return = mode gallery

# --- Fixed bindings ---
d = exec sh -c 'trash "%" && notify-send "Screenshot trashed" "%"'
y = exec wl-copy < '%'
o = exec dolphin --select '%'
e = exec swappy -f "%"

Escape = mode gallery
q = exit

# Mouse
MouseLeft = drag
ScrollUp = zoom +10 mouse
ScrollDown = zoom -10 mouse
Ctrl+ScrollUp = prev_file
Ctrl+ScrollDown = next_file

[keys.slideshow]
Space = pause
f = fullscreen
i = info
Escape = exit
q = exit

[keys.gallery]
h = step_left
l = step_right
j = step_down
k = step_up
Return = mode viewer
f = fullscreen
i = info
Plus = thumb +20
Minus = thumb -20
Escape = exit
q = exit
